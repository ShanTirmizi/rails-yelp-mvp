<p><%= @restaurant.name %>|| <%= @restaurant.address %>|| <%= @restaurant.phone_number %>
<%= @restaurant.category %></p>

<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Edit", restaurant_path(@restaurant), method: :edit %>

<% @restaurant.reviews.each do |res| %>
<%= res.content  %> <%= res.rating  %>
<% end %>


<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit %>
<% end %>




